<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="360dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/intitule_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:hint="IntitulÃ©"
                android:backgroundTint="@android:color/transparent"
                android:lines="1"
                android:maxLength="14"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/intitule_editText"
                app:layout_constraintLeft_toLeftOf="@id/intitule_editText"
                android:src="@drawable/divider"/>

            <Button
                android:id="@+id/heure_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:background="@android:color/transparent"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/intitule_editText"
                android:layout_marginTop="8dp"
                android:hint="Heure" />

            <TextView
                android:id="@+id/heure_minute_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="@id/heure_button"
                android:text="18H53"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/heure_button"
                app:layout_constraintLeft_toLeftOf="@id/heure_button"
                android:src="@drawable/divider"/>

            <Button
                android:id="@+id/date_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:background="@android:color/transparent"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/heure_minute_text"
                android:layout_marginTop="20dp"
                android:hint="Date" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="@id/date_button"
                android:text="07/09/2001"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/date_button"
                app:layout_constraintLeft_toLeftOf="@id/date_button"
                android:src="@drawable/divider"/>

            <Button
                android:id="@+id/location_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:background="@android:color/transparent"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/date_text"
                android:layout_marginTop="20dp"
                android:hint="Location" />

            <TextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="@id/location_button"
                android:text="Salle A"/>

            <Button
                android:id="@+id/create_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/location_button"
                app:layout_constraintLeft_toLeftOf="@id/location_text"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="20dp"
                android:padding="20dp"
                android:textSize="30sp"
                android:hint="Create !" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>