<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_height="70dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nameHourLocation_meeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/archivo_black"
                android:text="RÃ©union A - 14H -  Salle A"
                android:textColor="#696969"
                android:textSize="17sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/email_meeting"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:textColor="#808080"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="david.aimeric@outlook.fr"
                android:layout_marginBottom="100dp"
                app:layout_constraintLeft_toLeftOf="@id/nameHourLocation_meeting"
                app:layout_constraintTop_toBottomOf="@id/nameHourLocation_meeting" />

            <TextView
                android:id="@+id/date_meeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#808080"
                android:textSize="14sp"
                android:text="07/09/2001"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="75dp"
                app:layout_constraintTop_toBottomOf="@id/nameHourLocation_meeting" />

            <ImageView
                android:id="@+id/trash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="23dp"
                android:src="@drawable/ic_delete_24dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>